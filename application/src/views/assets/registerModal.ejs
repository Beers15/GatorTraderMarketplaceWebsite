<div class="modal fade " id="registerModal">
    <div class="modal-dialog ">
        <div class="modal-content login-modal-container">
            <div class="modal-header loginProperties">
                <b>Register</b>
                <button type="button" class="close white" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-header">
                <b>REGISTER</b>
            </div>
            <form action="regis" method="POST">
                <div class="form-group">
                    <label for="firstname">First name</label>
                    <input
                            type="firstname"
                            id="firstname"
                            pattern="[^A-Za-z0-9]+"
                            title="Only alpabets are allowed as inputs"
                            name="firstname"
                            class="form-control"
                            placeholder="Enter Name"
                           
                            value="<%= typeof firstname != 'undefined' ? firstname : '' %>"
                    />
                </div>
                <div class="form-group">
                    <label for="lastname">Last name</label>
                    <input
                            type="lastname"
                            id="lastname"
                            pattern="[^A-Za-z0-9]+"
                            title="Only alpabets are allowed as inputs"
                            name="lastname"
                            class="form-control"
                            placeholder="Enter Name"
                            value="<%= typeof lastname != 'undefined' ? lastname : '' %>"
                    />
                </div>

                <div class="form-group">
                    <label for="email">Email</label>
                    <input
                            type="email"
                            id="email"
                            name="email"
                            class="form-control"
                            placeholder="Enter Email"
                            value="<%= typeof email != 'undefined' ? email : '' %>"
                    />
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input
                            type="password"
                            id="password"
                            name="password"
                            class="form-control"
                            placeholder="Create Password"
                            value="<%= typeof password != 'undefined' ? password : '' %>"
                    />
                </div>
                <div class="form-group">
                    <label for="password2">Confirm Password</label>
                    <input
                            type="password"
                            id="password2"

                            name="password2"
                            class="form-control"
                            placeholder="Confirm Password"
                            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
                    />
                </div>
                <input type="submit" value="register">
                <!-- <<button type="submit" class="btn btn-primary btn-block"> -->
                    <!-- Register -->
                <!-- </button>? -->
            </form>
                I agree to the <u>Terms and Conditions</u>
            </div>
        </div>
    </div>
</div>
